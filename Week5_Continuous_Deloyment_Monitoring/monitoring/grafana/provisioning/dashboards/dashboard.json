{
  "dashboard": {
    "id": null,
    "uid": "flask-dashboard",
    "title": "Flask App Monitoring",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "panels": [
      {
        "type": "graph",
        "title": "Total Weather Requests",
        "targets": [
          {
            "expr": "weather_requests_total",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"x":0,"y":0,"w":12,"h":6}
      },
      {
        "type": "graph",
        "title": "Weather Requests Rate (per sec)",
        "targets": [
          {
            "expr": "rate(weather_requests_total[1m])",
            "legendFormat": "{{status}}"
          }
        ],
        "gridPos": {"x":0,"y":6,"w":12,"h":6}
      }
    ]
  },
  "overwrite": true
}
